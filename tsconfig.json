{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "baseUrl": ".",
    "paths": {
      // Root
      "@/*": ["./*"],
      // Backend aliases
      "@be": ["./"],
      "@be-types/*": ["./types/*"],
      "@be-plugins/*": ["./plugins/*"],
      "@be-routes/*": ["./routes/*"],
      "@be-config": ["./config/index"],
      "@be-config/*": ["./config/*"],
      "@be-helpers/*": ["./helpers/*"],
      "@be-utils/*": ["./utils/*"],
      "@be-services/*": ["./services/*"],
      "@be-engines/*": ["./engines/*"],
      // Frontend aliases
      "@fe/*": ["./views/vue/*"],
      "@fe-constants/*": ["./views/vue/constants/*"],
      "@fe-helpers/*": ["./views/vue/helpers/*"],
      "@fe-components/*": ["./views/vue/components/*"],
      "@fe-plugins/*": ["./plugins/*"],
      "@fe-stores/*": ["./views/vue/stores/*"],
      "@fe-routes/*": ["./views/vue/routes/*"],
      "@fe-pages/*": ["./views/vue/pages/*"],
      "@fe-utils/*": ["./views/vue/utils/*"],
      "@fe-types/*": ["./views/vue/types/*"],
      "@fe-assets/*": ["./public/*"]
    },
    "types": ["bun-types", "vue", "elysia"]
  },
  "include": [
    "server.ts",
    "routes/**/*.ts",
    "src/**/*.ts",
    "views/vue/**/*.ts",
    "views/vue/**/*.vue",
    "plugins/**/*.ts",
    "types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "public",
    "dist"
  ]
}